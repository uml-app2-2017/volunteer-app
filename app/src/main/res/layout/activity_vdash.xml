<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/user_greeting_vol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, user!"
            android:textColor="@color/colorWhiteFont"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/user_next_meet_vol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your next plan is in..."
            android:textColor="@color/colorWhiteFont"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/user_level"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="4"
            android:textAlignment="center"
            android:textSize="50dp"
            android:background="@drawable/drawable_circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <ProgressBar
                android:id="@+id/user_level_progress"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:progress="50"
                android:indeterminate="false"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/user_level_progress_num"
                android:text="5/10"
                android:textColor="@color/colorWhiteFont"
                android:textSize="20dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/your_plans_button_vol"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorWhiteFont"
            android:text="Your Plans"
            android:textSize="25dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorBackground"/>

        <Button
            android:id="@+id/offer_help_button_vol"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorWhiteFont"
            android:text="Offer Help"
            android:textSize="25dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorBackground"/>

        <Button
            android:id="@+id/your_profile_button_vol"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorWhiteFont"
            android:text="Your Profile"
            android:textSize="25dp"/>

    </LinearLayout>

</ScrollView>